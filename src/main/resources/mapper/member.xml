<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.home.mapper.MemberMapper">

	<insert id="signUp" parameterType="com.ssafy.home.dto.MemberDto">
		insert into member(name, id, pw, phone, email, role, created_at, updated_at)
		values (#{name}, #{id}, #{pw}, #{phone}, #{email},#{role}, now(), now())
	</insert>


	<select id="login" parameterType="com.ssafy.home.dto.MemberDto" resultType="com.ssafy.home.dto.MemberDto">
		select * from member
		where userid = #{id} and userpwd = #{pw}
	</select>
